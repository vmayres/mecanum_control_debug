<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="robot">

    <!--! Inclui macros de inÃ©rcia !-->
    <xacro:include filename="inertial_macros.xacro" />

    <!--! MATERIALS !-->
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.5 0 1" />
    </material>

    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>

    <!--! BASE_FOOTPRINT LINK -->
    <link name="base_footprint" />

    <!--! CHASSI (base_link) !-->
    <!--? LINK ?-->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.545 0.225 0.140" />
            </geometry>
            <material name="black" />
        </visual>
        <visual>
            <geometry>
                <box size="0.36 0.325 0.140" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <box size="0.545 0.225 0.140" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.0" x="0.545" y="0.225" z="0.140">
            <origin xyz="0 0 0" />
        </xacro:inertial_box>
    </link>

    <joint name="footprint_to_base_link" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.095" rpy="0 0 0" />
    </joint>

    <gazebo reference="base_link">
        <material>Gazebo\Black</material>
    </gazebo>

    <!--! FRONT LEFT WHEEL -->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <origin rpy="-1.57 0 0" xyz="0 0 0" />
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <origin rpy="-1.57 0 0" xyz="0 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.075" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="fl_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_left_wheel" />
        <origin xyz="0.237 -0.150 -0.055" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <gazebo reference="front_left_wheel">
        <material>Gazebo\Blue</material>
    </gazebo>

    <!--! FRONT RIGHT WHEEL -->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <origin rpy="-1.57 0 0" xyz="0 0 0" />
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <origin rpy="-1.57 0 0" xyz="0 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.075" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="fr_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_right_wheel" />
        <origin xyz="0.237 0.150 -0.055" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <gazebo reference="front_right_wheel">
        <material>Gazebo\Blue</material>
    </gazebo>

    <!--! REAR LEFT WHEEL -->
    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <origin rpy="-1.57 0 0" xyz="0 0 0" />
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <origin rpy="-1.57 0 0" xyz="0 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.075" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="rl_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="rear_left_wheel" />
        <origin xyz="-0.237 -0.150 -0.055" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <gazebo reference="rear_left_wheel">
        <material>Gazebo\Blue</material>
    </gazebo>

    <!--! REAR RIGHT WHEEL -->
    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <origin rpy="-1.57 0 0" xyz="0 0 0" />
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.075" />
            </geometry>
            <origin rpy="-1.57 0 0" xyz="0 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.075" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="rr_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="rear_right_wheel" />
        <origin xyz="-0.237 0.150 -0.055" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <gazebo reference="rear_right_wheel">
        <material>Gazebo\Blue</material>
    </gazebo>

</robot>
